<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_detail_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_photo"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/contact_detail_photo_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_unknown_contact_picture_180_holo_light" />

    <!-- This fragment is an invisible worker fragment that loads the contact
        details. -->
    <fragment
        android:id="@+id/unknown_contact_fragment"
        class="com.android.contacts.detail.UnknownContactFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</LinearLayout>
