<resources>

    <style
        name="Miui.Theme.Holo.Light.NoActionBar"
        parent="@miui:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style
        name="Theme.Resource.Theme"
        parent="@miui:style/Theme.Light">
        <item name="android:actionBarSize">75px</item>
        <item name="android:homeAsUpIndicator">@drawable/action_bar_title_icon</item>
        <item name="android:actionBarStyle">@style/Theme.Resource.ActionBar.Style</item>
        <item name="android:actionBarTabBarStyle">@style/Theme.Resource.ActionBarTabBar.Style</item>
    </style>

    <style
        name="Theme.Resource.ActionBar.Style"
        parent="@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:background">@miui:drawable/title</item>
        <item name="android:backgroundStacked">@null</item>
    </style>

    <style
        name="Theme.Resource.ActionBarTabBar.Style"
        parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:divider">@miui:drawable/tab_divider</item>
        <item name="android:background">@miui:drawable/tab_bg</item>
    </style>

    <style
        name="Theme.Resource.Theme.List"
        parent="@style/Theme.Resource.Theme">
        <item name="android:homeAsUpIndicator">@miui:raw/empty_transparent</item>
        <item name="android:actionBarStyle">@style/Theme.Resource.ActionBar.Style.List</item>
    </style>

    <style
        name="Theme.Resource.ActionBar.Style.List"
        parent="@style/Theme.Resource.ActionBar.Style">
        <item name="android:icon">@drawable/action_bar_title_icon</item>
        <item name="android:logo">@drawable/action_bar_logo</item>
        <item name="android:title">@string/theme_component_title_all</item>
    </style>

</resources>