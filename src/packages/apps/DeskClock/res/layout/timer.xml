<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deskclock_bg">
    <com.android.deskclock.WatchDial
        android:id="@+id/watch_dial"
        android:background="@drawable/timer_watch_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/timer_foot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/timer_foot_margin_bottom">
        <Button
            android:id="@+id/start_timer"
            style="@style/TimerStyleStartButton"
            android:text="@string/start_up"
            android:background="@drawable/btn_start"
            android:layout_width="@dimen/timer_control_button_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/timer_start_up" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/timer_control_button_width"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cancel_timer"
                style="@style/TimerButtonStyle"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_cancel"
                android:drawableLeft="@drawable/timer_stop"/>
            <Button
                android:id="@+id/pause_timer"
                style="@style/TimerButtonStyle"
                android:text="@string/pause"
                android:background="@drawable/btn_pause"
                android:drawableLeft="@drawable/timer_pause"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/timer_control_button_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/timer_ringtone_button_margin_top"
            android:layout_marginBottom="@dimen/timer_ringtone_button_margin_bottom">
            <LinearLayout
                android:id="@+id/ringtone"
                android:gravity="center"
                android:background="@drawable/btn_ringtone"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/remind_ringtone"
                        android:textSize="@dimen/timer_button_text_size"
                        android:layout_marginLeft="@dimen/timer_button_text_margin_left"/>
                    <TextView
                        android:id="@+id/txt_ringtone"
                        android:textColor="@color/grey"
                        android:layout_marginTop="@dimen/timer_ringtone_text_margin_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/timer_button_text_margin_left"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/timer_image_arrow_right_margin"
                    android:src="@miui:drawable/arrow_right" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/keep_screen"
                android:background="@drawable/btn_keepscreen"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/keep_screen_on"
                    android:textSize="@dimen/timer_button_text_size"
                    android:layout_marginLeft="@dimen/timer_button_text_margin_left"/>
                <CheckBox
                    android:id="@+id/check_box"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>